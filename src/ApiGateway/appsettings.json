      "tiles-route": {
        "ClusterId": "dashboard-cluster",
        "Match": {
          "Path": "/api/tiles/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "digital-assets-route": {
        "ClusterId": "media-cluster",
        "Match": {
          "Path": "/api/digital-assets/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
