        "Match": {
          "Path": "/api/scheduled-exercises/{**catch-all}"
        },
        "Transforms": [
          { "PathRemovePrefix": "/api" }
        ]
      },
      "exercises-route": {
        "ClusterId": "exercises-cluster",
        "Match": {
          "Path": "/api/exercises/{**catch-all}"
        },
        "Transforms": [
