      "chat-hub-route": {
        "ClusterId": "communication-cluster",
        "Match": {
          "Path": "/hubs/chat/{**catch-all}"
        }
      }
    },
    "Clusters": {
      "identity-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://identity-api"
          }
        }
      },
      "athletes-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://athletes-api"
          }
        }
      },
      "workouts-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://workouts-api"
          }
        }
      },
      "exercises-cluster": {
        "Destinations": {
          "destination1": {
