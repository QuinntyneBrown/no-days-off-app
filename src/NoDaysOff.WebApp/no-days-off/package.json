{
  "name": "no-days-off",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --project no-days-off",
    "build": "ng build --project no-days-off",
    "watch": "ng build --watch --configuration development --project no-days-off",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "e2e": "npx playwright test --config=projects/no-days-off/src/e2e/playwright.config.ts",
    "e2e:ui": "npx playwright test --config=projects/no-days-off/src/e2e/playwright.config.ts --ui",
    "storybook": "ng run no-days-off:storybook",
    "build-storybook": "ng run no-days-off:build-storybook"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/animations": "^21.0.6",
    "@angular/cdk": "^21.0.5",
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/material": "^21.0.5",
    "@angular/platform-browser": "^21.0.0",
    "@angular/router": "^21.0.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.4",
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@compodoc/compodoc": "^1.1.32",
    "@playwright/test": "^1.57.0",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-links": "^8.6.14",
    "@storybook/angular": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "jest-preset-angular": "^16.0.0",
    "storybook": "^8.6.14",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.2"
  }
}
